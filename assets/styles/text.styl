.text-content
	h1, .h1
		font-size 2.5em
		line-height 1.4
	h2, .h2
		font-size 2em
	h3, .h3
		font-size 1.5em
	h4, .h4
		font-size 1.25em
	h1, .h1, h2, .h2, h3, .h3, h4, .h4
		margin 1em 0 1.5rem
		&:first-child
			margin-top 0
	p, ul, ol
		margin-bottom 0.75rem
		&:last-child
			margin-bottom 0
	a:not([href^='tel:'])
		text-decoration underline
		&:hover
			text-decoration none
	table
		margin 2em 0
		text-align left
		width 100%
		word-break normal
		table
			margin 0
	iframe
		display block
		margin 1em auto
		max-width 100%
		max-height 60vh
	+mediaMax(lg)
		h1, .h1
			font-size 2em
		h2, .h2
			font-size 1.5em
		h3, .h3
			font-size 1.25em
		h4, .h4
			font-size 1em
			font-weight bold
	+mediaMax(sm)
		h1, .h1
			font-size 1.75em
		h2, .h2
			font-size 1.25em
		h3, .h3
			font-size 1em
			font-weight bold
.t-
	&c
		text-align center
	&r
		text-align right
	&up
		text-transform uppercase
	&low
		text-transform lowercase
	&spaced
		letter-spacing 1px
	&xs
		font-size 0.5em
	&sm
		font-size 0.85em
	&lg
		font-size 1.2em
	&xl
		font-size 1.5em
